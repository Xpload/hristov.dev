{
  "compilerOptions": {
    "target": "es5",
    "module": "ES6",
    "strict": true,
    "jsx": "react",
    "lib": ["ES2015", "dom"],
    "esModuleInterop": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "./src/",
    "skipLibCheck": true,
    "removeComments": true,
    "checkJs": false,
    "importHelpers": true,
    "skipDefaultLibCheck": true
  },
  "files": ["./src/index.tsx"],
  "include": ["./src/"],
  "exclude": ["**/node_modules"]
}
